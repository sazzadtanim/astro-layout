---
interface Props {
  title: string;
}
import Aside from "../components/Aside.astro";
import DeveloperInfo from "../components/DeveloperInfo.astro";
import Head from "../components/Head.astro";
---

<!doctype html>
<html lang="en">
  <Head />
  <body
    class="ring-2 lg:grid text-white text-2xl container mx-auto h-[80vh] lg:my-20 lg:grid-flow-col lg:grid-cols-12"
  >
    <Aside />
    <DeveloperInfo />

    <!-- main app -->
    <div class="ring-2 bg-gray-800 lg:col-span-7 p-5 overflow-hidden main">
      <div
        class="ring-2 bg-slate-200 w-full h-full p-20 gap-10 grid overflow-y-scroll"
      >
        <slot />
      </div>
    </div>
    <style is:global>
      body {
        animation: appearUp linear 400ms;
      }
      @keyframes appearUp {
        from {
          opacity: 0.4;
          transform: translateY(10px);
        }
      }
      .main {
        background: #000;
        animation: appearUp linear 400ms;
      }
    </style>
  </body>
</html>
