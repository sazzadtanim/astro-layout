---
interface Props {
  title: string;
}
import MyIcon from "../components/MyIcon.astro";

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body
    class="lg:grid text-white text-2xl container mx-auto h-[80vh] my-20 lg:grid-flow-col lg:grid-cols-12"
  >
    <!-- aside -->
    <aside
      class="bg-gray-600 ring-2 lg:col-span-1 p-5 flex gap-4 grid-flow-col justify-between lg:flex-col"
    >
      <div class="flex gap-2 lg:flex-col lg:gap-5">
        {[...Array(5)].map((logo, i) => <MyIcon />)}
      </div>
      <div class="flex gap-2 lg:flex-col lg:gap-5">
        {[...Array(2)].map((logo, i) => <MyIcon />)}
      </div>
    </aside>

    <!-- Developer info -->
    <div class="bg-gray-700 ring-2 lg:col-span-4 p-5 grid">
      <!-- all -->
      <div class="align-bottom self-end">
        <!-- image -->
        <div class="ring-4 flex justify-center">
          <div
            class="w-36 h-36 rounded-full bg-white flex justify-center items-center ring-2"
          >
          </div>
        </div>

        <!-- text -->
        <div class="flex flex-col gap-5 p-10">
          <p class="h-2 bg-white"></p>
          <p class="h-2 bg-white"></p>
        </div>

        <!-- icons -->
        <div class="flex gap-4 my-10 justify-center mb-20">
          {
            [...Array(4)].map((icon, index) => (
              <a href="/" class="">
                <div class="w-10 h-10 bg-white" />
              </a>
            ))
          }
        </div>

        <!-- buttons -->
        <div class="flex gap-2 justify-between">
          <div class="w-20 h-10 bg-white"></div>
          <div class="w-20 h-10 bg-white"></div>
        </div>
      </div>
    </div>

    <!-- main app -->
    <div class="bg-gray-800 ring-2 lg:col-span-7 p-5 overflow-y-scroll">
      <div
        class="bg-slate-200 w-full h-full p-20 gap-10 grid overflow-y-scroll"
      >
        <!-- article -->
        {
          [...Array(40)].map((article, index) => (
            <article class="grid gap-2">
              <h2 class="w-40 h-8 bg-white" />
              <p class="w-full h-5 bg-white" />
              <p class="w-full h-5 bg-white" />
              <p class="w-full h-5 bg-white" />
            </article>
          ))
        }
      </div>
    </div>
  </body>
</html>

<style is:global></style>
